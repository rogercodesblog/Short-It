<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Short_It</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Short_It.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container my-3 my-md-5 rounded bg-white">
        <main role="main" class="row">
            <div class="col my-5">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="footer">
        <div class="container text-center text-white">
            <a class="text-white text-decoration-underline" asp-controller="Home" asp-action="Privacy">Privacy</a> - Short It 2024 - @DateTimeOffset.Now.Year
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
